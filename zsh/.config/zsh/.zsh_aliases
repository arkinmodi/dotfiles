#!/usr/bin/env zsh

alias grep="grep --color=auto"

alias ls="ls --color=auto"
alias l="ls -lah"
alias la="ls -lAh"
alias ll="ls -lh"
alias lsa="ls -lah"

alias k="kubectl"
alias python="python3"

command -v bat &> /dev/null && alias cat="bat --paging=never"
command -v gfind &> /dev/null && alias find="gfind"
command -v glocate &> /dev/null && alias locate="glocate"
command -v gsed &> /dev/null && alias sed="gsed"
command -v gtar &> /dev/null && alias tar="gtar"
command -v gupdatedb &> /dev/null && alias updatedb="gupdatedb"
command -v gxargs &> /dev/null && alias xargs="gxargs"
command -v nvim &> /dev/null && alias vi="nvim" && alias vim="nvim"
command -v podman &> /dev/null && alias docker="podman"

if [[ $(uname) == 'Darwin' ]]; then
    [ ! -e '/Applications/Firefox.app/Contents/MacOS/firefox' ] || alias firefox='/Applications/Firefox.app/Contents/MacOS/firefox'
    [ ! -e '/Applications/Firefox Developer Edition.app/Contents/MacOS/firefox' ] || alias firefoxdev='/Applications/Firefox\ Developer\ Edition.app/Contents/MacOS/firefox'
    [ ! -e '/Applications/Google Chrome.app/Contents/MacOS/Google Chrome' ] || alias chrome='/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome'
fi
