#!/usr/bin/env zsh

# Generate a random UUID
uuid() {
  python3 -c 'import uuid; print(uuid.uuid4())' | tr -d '\n' | pbcopy
  echo 'Copied a random UUID to your clipboard'
}

PLATFORM=$(uname)
if [[ $PLATFORM == 'Darwin' ]]; then

    # Delete all .DS_Store in current and all sub-directories
    deleteDS_Store() {
      echo 'Deleting all .DS_Store files...'
      find . -name '.DS_Store' -print -delete
      echo 'DONE'
    }

    # Trigger a notification
    notification() {
        # Sounds located in
        # - ~/Library/Sounds
        # - /System/Library/Sounds

        SOUND_NAME='Ping'
        TITLE='Terminal'
        MESSAGE="$@"
        osascript -e 'display notification "'$MESSAGE'" with title "'$TITLE'" sound name "'$SOUND_NAME'"'
    }

elif [[ $PLATFORM == 'Linux' ]]; then

    # Trigger a notification
    notification() {
        TITLE='Terminal'
        MESSAGE="$@"
        notify-send $TITLE $MESSAGE
    }

fi
